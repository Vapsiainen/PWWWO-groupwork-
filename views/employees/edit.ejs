<%- include('partials/navigation.ejs') %>
<div class="data-form" id="editEmployee">

    <form class="form-signin" method="POST" action="<%=`/employees/${employee._id}/update?_method=PUT`%>">

        <h2>Edit employee:</h2>

        <label id="formheader" for="inputname"><b>Name</b></label><br>
        <input class="form-control" type="text" name="name" id="inputname" value="<%= employee.name %>" placeholder="Full name" autofocus><br><br>

        <label id="formheader" for="inputEmail"><b>Email</b></label><br>
        <input class="form-control" type="text" name="email" id="inputEmail" value="<%= employee.email %>" placeholder="Email" autofocus><br><br>

        <label id="formheader" for="inputDepartment"><b>Working department</b></label><br>
        <input class="form-control" type="text" name="department" id="inputDepartment" value="<%= employee.department %>" placeholder="Department" autofocus><br>

        <button id="button" class="btn btn-lg btn-primary btn-block" type="submit">Update</button>

    </form>

</div>