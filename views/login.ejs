<div id="login">
    <h2>Login</h2>
    <%= flashMessages.success %>
    <%= flashMessages.error %><br><br>
    <form action="/" method="POST">
        <label id="formheader" for="inputEmail"><b>Email address</b></label><br>
        <input type="email" name="email" id="inputEmail" placeholder="Email address" required><br>
        <label id="formheader" for="inputPassword"><b>Password</b></label><br>
        <input type="password" name="password" id="inputPassword" placeholder="Password" required><br>
        <button id="button" type="submit">Login</button>
    </form>
</div>